subrutina BuscaIDs(ref ids : vector [PP] numerico; DatoBuscado : numerico) retorna numerico
var

	j, indiceElemento : numerico
	encontrado : logico
inicio
	j = 1
	encontrado = FALSE
	indiceElemento = 0
	mientras (j <= PP and not(encontrado))
	{
		si(array[j] == DatoBuscado)
		{
			encontrado = TRUE
			indiceElemento = j
		}
		j = j + 1
	}
	retorna(indiceElemento)
fin

